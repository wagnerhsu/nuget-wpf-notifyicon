<Window
    x:Class="TaskbarIcon03.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaskbarIcon03"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    xmlns:viewmodels="clr-namespace:TaskbarIcon03.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <tb:TaskbarIcon
            x:Name="myNotifyIcon"
            DoubleClickCommand="{Binding TestCommand}"
            IconSource="/Icons/Computers.ico">
            <tb:TaskbarIcon.TrayToolTip>
                <local:TooltipUserControl />
            </tb:TaskbarIcon.TrayToolTip>

            <tb:TaskbarIcon.DataContext>
                <viewmodels:NotifyIconViewModel />
            </tb:TaskbarIcon.DataContext>
        </tb:TaskbarIcon>
    </Grid>
</Window>
